@model e_commerce.Models.ProductsViewModel
@{
    ViewBag.Title = Model.Id;
}
@section scripts{ <script type="text/javascript" src="~/scripts/cameraObscura.js"></script> }
<div style="margin: 0 auto; width: 100%; display: flex; flex-direction: column; align-items: center;" class="container-fluid">
    <div class="text-center">
        <p style="padding: 10px;" class="messageBox"></p>
    </div>
    <div style="margin: 0 auto; padding-top: 40px; " class="row">
        <img style="width: 500px; height: auto;" class="img-responsive img-thumbnail" src="@Url.Content("~/Content/img/" + @Model.ImgPath)" alt="@Model.ProductName" />
        <div style="flex-direction: row; display: flex; justify-content: space-between; align-items: flex-end;">
            <div>
                <h4 >@Model.ProductName</h4>
                <p > @Model.ProductDescription</p>
                <p class="strong">Price @Model.ProductPrice £ </p>
            </div>
            @using (Html.BeginForm("AddItemToCart", "Cart"))
            {
                <div style="display: flex; flex-direction: row; padding-top: 10px;" class="form-group">
                    <input type="hidden" name="ProductId" value="@Model.Id" />
                    <input min="1" style="width: 40px; margin-right: 10px;" class="form-control" type="text" name="Quantity" value="1" /> <br />

                    <input style="background-color: green; color: white;" class="addProduct btn btn-default" type="submit" value="Add to cart" />
                </div>
            }
            <button style="margin-bottom: -40px;" class="btn btn-default">@Html.ActionLink("Back to products", "Index", "Products")</button>
        </div>
    </div>
    </div>