@model e_commerce.Models.ProductsViewModel
@{
    ViewBag.Title = "ShowCart";
}

<h2>Your cart</h2>
<div class="container-fluid">
    <div class="row">

        @foreach (var cart in Model)
        {
            <div class="col-sm-3">
                <h2>@cart.ProductName</h2> <br />
                <p>@cart.ProductDescription</p> <br />
                <small>@cart.ProductPrice</small>
            </div>
        }
    </div>
</div>

